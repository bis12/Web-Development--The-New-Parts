          %td (2,2)
        %tr
          %td (1,3)
          %td (2,3)
        %tr
          %td (1,4)
          %td (2,4)
    .slide
      %h1 CSS3 Properties
      %div.roundy
        %div.centervertically{:style=>""}
          Rounded Corners!
      .note
        border-radius: 20px;
    .slide
      %h1 CSS3 Properties
      %div.roundy.shadow
        %div.centervertically{:style=>""}
          Box Shadows!
      .note
        box-shadow: 0px 0px 40px rgba(255,255,255,0.6);
    .slide
      %h1 CSS3 Properties
