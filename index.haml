    %script{:type => "text/javascript", :src => "resources/prettify.js"}
    %script{:src => 'resources/slidy.js', :charset => 'utf-8', :type => 'text/javascript'}
    :coffeescript
      $(document).ready -> prettyPrint()
    :css
      div.slide#pseudoclasses table {
        margin:auto;
      }
      div.slide#pseudoclasses td {
        padding:5px;
      }
      div.slide#pseudoclasses tr:nth-child(odd) {
        color:#FFF;
      }
      div.slide#pseudoclasses tr:nth-child(even) {
        color:rgba(255,255,255,0.5);
      }
      div.roundy {
        border-radius: 20px;
        width:300px;
        height:100px;
        margin:auto;
        background-color:rgba(0,0,0,0.5);
      }
      div.centervertically {
        display:table-cell;
        vertical-align:middle;
        height:100px;
        width:300px;
        text-align:center;
      }
      div.shadow {
        box-shadow:0px 0px 50px rgba(255,255,255,0.6);
      }
      div.gradient {
        background-image:-moz-linear-gradient(bottom , #000000 0%, rgba(255, 255, 255, 0.5) 50%,rgba(0,0,0,1) 100%);
        background-image:-webkit-linear-gradient(center bottom , #000000 0%, rgba(255, 255, 255, 0.5) 50%,rgba(0,0,0,1) 100%);
      }

  %body
    .slide
      .bigt
        %span Web Development: The New Stuff

    .slide
      %h1 Front End Web
      %h1 HTML + CSS + JAVASCRIPT
      .note 
        %li test of note
        %li there is stuff here!

    .slide
      %h1 This is not art
      %h3 it just feels kinda artsy
      .note 
        %li test of note2
        %li there is stuff here!

    .slide
      %h1 HTML5
